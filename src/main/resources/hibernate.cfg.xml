<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.sqlite.hibernate.dialect.SQLiteDialect
        </property>
        <property name="hibernate.connection.driver_class">
            org.sqlite.JDBC
        </property>
        <property name="hibernate.connection.url">
            jdbc:sqlite:sqlite2.db
        </property>
        <property name="hibernate.connection.username">

        </property>
        <property name="hibernate.connection.password">

        </property>
        <property name="hibernate.hbm2ddl.auto">
            create-drop
        </property>

        <mapping class="uk.ac.ncl.workshop_admin.model.Person" />
        <mapping class="uk.ac.ncl.workshop_admin.model.School" />
        <mapping class="uk.ac.ncl.workshop_admin.model.Programme" />
        <mapping class="uk.ac.ncl.workshop_admin.model.Stage" />
        <mapping class="uk.ac.ncl.workshop_admin.model.Workshop" />
    </session-factory>
</hibernate-configuration>